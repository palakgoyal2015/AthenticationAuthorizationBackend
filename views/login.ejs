<body>
    <div class="w-full min-h-screen bg-zinc-900 ">
        <h2 class="text-white text-3xl">Login</h2>
        <form action="/login/create" method="post">
           
            <input class="py-4 px-2 bg-transparent border-2 border-zinc-200 rounded-md text-white" type="email" name="email" placeholder="Enter email">
            <input class="py-4 px-2 bg-transparent border-2 border-zinc-200 rounded-md text-white" type="password" name="password" placeholder="Enter Password">
            <input class="py-4 px-2 bg-blue-800 bg-blue-900 border-2 rounded-md text-white" type="submit" value="submit">
        </form>
        <div>
            <br>
        <a class="py-1 px-2 bg-blue-700 border-2 rounded-md" href="/">Sign up</a>
    </div>
    </div>
